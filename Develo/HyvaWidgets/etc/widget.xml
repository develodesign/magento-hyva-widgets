<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">

	<!--Develo Horizontal Advert Widget-->

	<widget class="Develo\HyvaWidgets\Block\Widgets\DeveloHorizontalAdvert" id="develo_horizontaladvert_widget" placeholder_image="Develo_HyvaWidgets::images/horizontal-advert.png">
		<label>Develo Horizontal Advert</label>
		<description></description>
		<parameters>
			<parameter name="advert_title" sort_order="10" visible="true" xsi:type="text">
				<label>Title</label>
			</parameter>
			<parameter name="advert_title_color" sort_order="20" visible="true" xsi:type="text">
				<label>Title color,  must be a hexcode like: "#000000" (Include a hashtag. No semiocolon at the end)</label>
			</parameter>
			<parameter name="advert_content" sort_order="21" visible="true" xsi:type="block">
				<label>Content</label>
				<block class="Develo\HyvaWidgets\Block\Widgets\TextField"/>
			</parameter>
			<parameter name="advert_content_color" sort_order="22" visible="true" xsi:type="text">
				<label>Content color,  must be a hexcode like: "#000000" (Include a hashtag. No semiocolon at the end)</label>
			</parameter>
			<parameter name="advert_button_text" sort_order="23" visible="true" xsi:type="text">
				<label>Button text</label>
			</parameter>
			<parameter name="advert_button_text_color" sort_order="24" visible="true" xsi:type="text">
				<label>Button Text color, must be a hexcode like: "#000000" (Include a hashtag. No semiocolon at the end)</label>
			</parameter>
			<parameter name="advert_button_color" sort_order="25" visible="true" xsi:type="text">
				<label>Button Background color, must be a hexcode like: "#ff00ff" (Include a hashtag. No semiocolon at the end)</label>
			</parameter>
			<parameter name="advert_button_url" sort_order="26" visible="true" xsi:type="text">
				<label>Button URL</label>
			</parameter>
			<parameter name="advert_contact_image" xsi:type="block" visible="true" sort_order="27">
				<label translate="true">Background Photo</label>
				<description translate="true">Contact image</description>
				<block class="Develo\HyvaWidgets\Block\Widgets\ImageChooser">
					<data>
						<item name="button" xsi:type="array">
							<item name="open" xsi:type="string">Choose Image...</item>
						</item>
					</data>
				</block>
			</parameter>
			<parameter name="advert_bg_color" sort_order="28" visible="true" xsi:type="text">
				<label>Background Color, must be a hexcode like: "#eeeeee" (Include a hashtag. No semiocolon at the end)</label>
			</parameter>
			<parameter name="advert_icon_image" xsi:type="block" visible="true" sort_order="29">
				<label translate="true">Icon</label>
				<description translate="true">Icon Image</description>
				<block class="Develo\HyvaWidgets\Block\Widgets\ImageChooser">
					<data>
						<item name="button" xsi:type="array">
							<item name="open" xsi:type="string">Choose Image...</item>
						</item>
					</data>
				</block>
			</parameter>
		</parameters>
	</widget>

	<!--Develo Quotes Block Widget-->

	<widget class="Develo\HyvaWidgets\Block\Widgets\DeveloQuotesBlock" id="develo_quotesblock_widget" placeholder_image="Develo_HyvaWidgets::images/quotes-block.png">
		<label>Develo QuotesBlock</label>
		<description></description>
		<parameters>
			<parameter name="widgetquote-text1" sort_order="10" visible="true" xsi:type="block">
				<label>Quote-text 1</label>
				<block class="Develo\HyvaWidgets\Block\Widgets\TextField"/>
			</parameter>
			<parameter name="widget-author1" sort_order="20" visible="true" xsi:type="text">
				<label>Author 1</label>
			</parameter>
			<parameter name="widget-company-name1" sort_order="30" visible="true" xsi:type="text">
				<label>Company Name 1</label>
			</parameter>
			<parameter name="widgetquote-text2" sort_order="40" visible="true" xsi:type="block">
				<label>Quote-text 2</label>
				<block class="Develo\HyvaWidgets\Block\Widgets\TextField"/>
			</parameter>
			<parameter name="widget-author2" sort_order="50" visible="true" xsi:type="text">
				<label>Author 2</label>
			</parameter>
			<parameter name="widget-company-name2" sort_order="60" visible="true" xsi:type="text">
				<label>Company Name 2</label>
			</parameter>
			<parameter name="widgetquote-text3" sort_order="70" visible="true" xsi:type="block">
				<label>Quote-text 3</label>
				<block class="Develo\HyvaWidgets\Block\Widgets\TextField"/>
			</parameter>
			<parameter name="widget-author3" sort_order="80" visible="true" xsi:type="text">
				<label>Author 3</label>
			</parameter>
			<parameter name="widget-company-name3" sort_order="90" visible="true" xsi:type="text">
				<label>Company Name 3</label>
			</parameter>
		</parameters>
	</widget>

	<!--Develo FAQ Accordion Widget-->
	<widget id="develo_faq_widget" class="Develo\HyvaWidgets\Block\Widgets\DeveloFAQ" placeholder_image="Develo_HyvaWidgets::images/DeveloFAQ.png">
		<label translate="true">Develo FAQ Widget</label>
		<description translate="true">Develo FAQ Widget Desc</description>
		<parameters>
			<parameter name="hyva_multi_field_content_admin_title" xsi:type="block" required="false" visible="true" sort_order="0">
				<description>
					<![CDATA[<hr style="margin:40px 0;" /><h1 style="text-align: left; margin: 40px 0">Content</h1>]]></description>
				<block class="Develo\HyvaWidgets\Block\Adminhtml\Renderer\WidgetSectionTitle"/>
			</parameter>

			<parameter name="hyva_multi_field_title" sort_order="10" visible="true" xsi:type="text">
				<label>Widget title</label>
			</parameter>

			<!-- `conditions` is a hardcoded parameter name that serializes multidimensional arrays -->
			<!-- Without this, you'll get an error about array to string conversion in \Magento\Widget\Model\Widget\Instance::generateLayoutUpdateXml -->
			<parameter name="conditions" xsi:type="block" sort_order="50" required="false" visible="true">
				<label translate="true">Steps</label>
				<block class="Develo\HyvaWidgets\Block\Adminhtml\DeveloFAQ"/>
			</parameter>
		</parameters>
	</widget>

</widgets>