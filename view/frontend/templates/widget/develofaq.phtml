                            <div class="flex justify-between items-center">
                                <span itemprop="name"><?= $question->getTitle() ?></span>
                                <span class="transition-all duration-700" x-bind:style="selected == <?= $uniqueKey ?> ? 'transform: rotate(180deg)' : ''">
